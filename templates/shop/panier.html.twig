{% extends "base.html.twig" %}
{% block title %}Panier{% endblock %}

{% block content %}



<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center">Voici mon panier</h1>
            <hr>

            <table class ="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{item.produit.nom}}</td>
                    <td>{{item.produit.tarif}}</td>
                    <td>{{item.quantity}}</td>
                    <td>{{item.produit.tarif * item.quantity}}</td>
                </tr>
            </tbody>
        
            </table>
            {% endfor %}

        </div>
    </div>
</div>

{% endblock %}